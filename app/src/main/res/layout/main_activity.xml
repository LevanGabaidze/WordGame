<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ViewAnimator
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/animator">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/loading_scene"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_gravity="center"
                android:src="@drawable/title"/>

            <com.github.rahatarmanahmed.cpv.CircularProgressView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/progress_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:cpv_animAutostart="true"
                app:cpv_indeterminate="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">


            <Button
                android:layout_width="@dimen/button_w"
                android:layout_height="@dimen/button_h"
                android:id="@+id/start_play"
                android:text="Play"
                android:layout_margin="@dimen/medium_margin"
                />

            <Button
                android:layout_width="@dimen/button_w"
                android:layout_height="@dimen/button_h"
                android:id="@+id/multiPlayer"
                android:text="MultyPlayer"
                android:layout_margin="@dimen/medium_margin"/>

            <Button
                android:layout_width="@dimen/button_w"
                android:layout_height="@dimen/button_h"
                android:id="@+id/btn_exit"
                android:text="Exit"
                android:layout_margin="@dimen/medium_margin"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plese choose number of oponents:"
                android:layout_margin="@dimen/medium_margin"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="50dp">

                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:checked="true"
                    android:layout_height="wrap_content"
                    android:id="@+id/oponent_q1"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/oponent_q2"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/oponent_q3"/>


            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="please choose difficulty: "
                android:layout_margin="@dimen/medium_margin"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="easy"
                    android:checked="true"
                    android:id="@+id/diff_lvl1"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="medium"
                    android:id="@+id/diff_lvl2"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hard"
                    android:id="@+id/diff_lvl3"/>

            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="@dimen/button_w"
                    android:layout_height="@dimen/button_h"
                    android:layout_margin="@dimen/medium_margin"
                    android:id="@+id/back_btn"
                    android:text="@string/back"
                    />


                <Button
                    android:layout_width="@dimen/button_w"
                    android:layout_height="@dimen/button_h"
                    android:text="Start"
                    android:id="@+id/begin_game"
                    android:layout_margin="@dimen/medium_margin"
                    />



            </LinearLayout>




            


        </LinearLayout>


    </ViewAnimator>





</LinearLayout>
